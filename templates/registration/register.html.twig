{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<div class="container mx-auto my-12 border-b border-gray-400 pb-4">
		<h1 class="text-5xl font-semibold mb-4">Register</h1>
	</div>

	<div class="container mx-auto">
		{{ form_start(registrationForm) }}
		<div>
			{{ form_label(registrationForm.email, 'Enter Email', {'label_attr':{'class':'block text-sm text-gray-700 font-medium'}}) }}
			{{ form_widget(registrationForm.email, { 'attr': {'class': 'block w-full shadow-sm border border-gray-300 mt-1 p-2 rounded-sm'} })}}
			 <div class="text-red-600">{{ form_errors(registrationForm.email) }}</div>
		</div>
		<div>
			{{ form_label(registrationForm.plainPassword, 'Enter Password', {'label_attr':{'class':'block text-sm text-gray-700 font-medium mt-3'}}) }}
			{{ form_widget(registrationForm.plainPassword, { 'attr': {'class': 'block w-full shadow-sm border border-gray-300 mt-1 p-2 rounded-sm'} })}}
            <div class="text-red-600">{{ form_errors(registrationForm.plainPassword) }}</div>
		</div>
		<div class="mt-3 flex">
			{{ form_widget(registrationForm.agreeTerms, { 'attr': {'class': 'block p-2 mr-2'} })}}
			{{ form_label(registrationForm.agreeTerms, 'Agree Terms', {'label_attr':{'class':'block text-sm text-gray-700 font-medium'}}) }}
			 <div class="text-red-600">{{ form_errors(registrationForm.agreeTerms) }}</div>
		</div>
		<button type="submit" class="mt-4 w-full bg-sky-200 p-4 rounded-md hover:bg-sky-300">Register</button>
		{{ form_end(registrationForm) }}
	</div>
{% endblock %}
